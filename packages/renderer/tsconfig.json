{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es5",
            "ES2015",
            "ES2016",
            "ES2017"
        ],
        "module": "es6",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "target": "es6",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ]
}
