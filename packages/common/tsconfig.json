{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["dom", "dom.iterable", "es5", "es6", "ES2016", "ES2017", "ES2018"],
        "module": "esnext",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "outDir": "./dist/",
        "paths": {
            "@pinecast/styles": ["../styles/src/index.ts"],
            "@pinecast/xhr": ["../xhr/src/index.ts"]
        },
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6",
        "jsx": "react"
    },
    "include": ["./src/**/*"]
}
