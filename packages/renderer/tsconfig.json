{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@pinecast/sb-components": ["../components/src/index.ts"],
            "@pinecast/sb-editor": ["../editor/src/index.ts"],
            "@pinecast/sb-presets": ["../presets/src/index.ts"],
            "@pinecast/sb-renderer": ["../renderer/src/index.ts"],
            "@pinecast/sb-resources": ["../resources/src/index.ts"],
            "@pinecast/sb-styles": ["../styles/src/index.ts"]
        },
        "outDir": "./dist/",
        "sourceMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es5",
            "ES2015",
            "ES2016",
            "ES2017"
        ],
        "module": "es6",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "target": "es6",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ]
}
