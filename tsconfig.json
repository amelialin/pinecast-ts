{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018"
    ],
    "module": "esnext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "paths": {
      "@pinecast/common": ["../common/src/index.ts"],
      "@pinecast/common/*": ["../common/src/*"],
      "@pinecast/db-ads": ["../db-ads/src/index.ts"],
      "@pinecast/db-analytics": ["../db-analytics/src/index.ts"],
      "@pinecast/db-categories": ["../db-categories/src/index.ts"],
      "@pinecast/db-import-tool": ["../db-import-tool/src/index.ts"],
      "@pinecast/db-publish-picker": ["../db-publish-picker/src/index.ts"],
      "@pinecast/db-spotify": ["../db-spotify/src/index.ts"],
      "@pinecast/db-tip-jar-connect": ["../db-tip-jar-connect/src/index.ts"],
      "@pinecast/db-upgrade": ["../db-upgrade/src/index.ts"],
      "@pinecast/db-uploader": ["../db-uploader/src/index.ts"],
      "@pinecast/externals/*": ["../externals/src/*"],
      "@pinecast/i18n": ["../i18n/src/index.ts"],
      "@pinecast/pt-query": ["../pt-query/src/index.ts"],
      "@pinecast/sb-components": ["../sb-components/src/index.ts"],
      "@pinecast/sb-editor": ["../sb-editor/src/index.ts"],
      "@pinecast/sb-presets": ["../sb-presets/src/index.js"],
      "@pinecast/sb-renderer": ["../sb-renderer/src/index.ts"],
      "@pinecast/sb-resources": ["../sb-resources/src/index.ts"],
      "@pinecast/styles": ["../styles/src/index.ts"],
      "@pinecast/xhr": ["../xhr/src/index.ts"],

      "@mattbasta/browser-id3-writer": [
        "../../typings/@mattbasta/browser-id3-writer/index.d.ts"
      ],
      "@mattbasta/jsmediatags": [
        "../../typings/@mattbasta/jsmediatags/index.d.ts"
      ],
      "canvas-to-blob": ["../../typings/canvas-to-blob/index.d.ts"],
      "exif": ["../../typings/exif/index.d.ts"]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "jsx": "react"
  },
  "include": ["./src/**/*"]
}
